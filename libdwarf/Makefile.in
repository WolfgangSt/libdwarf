        dwarf_addr_finder.o \
	dwarf_sort_line.o \
	dwarf_print_lines.o \
        pro_alloc.o \
        pro_arange.o \
        pro_die.o \
        pro_error.o \
        pro_expr.o \
        pro_finish.o \
        pro_forms.o \
